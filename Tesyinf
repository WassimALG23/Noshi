local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "ðŸŒ± Seed Buyer",
    SubTitle = "by Zoro",
    TabWidth = 160,
    Size = UDim2.fromOffset(560, 420),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "shopping-cart" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

local Options = Fluent.Options

-- Your exact seed list
local seedList = {
    "Carrot",
    "Strawberry",
    "Blueberry",
    "Tomato",
    "Cauliflower",
    "Avocado",
    "Banana",
    "Green Apple",
    "Bell Pepper",
    "Kiwi",
    "Prickly Pear",
    "Loquat",
    "Feijoa",
    "Sugar Apple"
}

-- Multi-select dropdown
local SelectedSeeds = Tabs.Main:AddDropdown("SelectedSeeds", {
    Title = "Select Seeds to Auto Buy",
    Multi = true,
    Values = seedList,
    Default = {}
})

-- Toggle
local AutoBuy = Tabs.Main:AddToggle("AutoBuyToggle", {
    Title = "Auto Buy",
    Default = false
})

-- Loop when toggle is enabled
AutoBuy:OnChanged(function(state)
    if state then
        task.spawn(function()
            while AutoBuy.Value do
                for seedName, isSelected in pairs(SelectedSeeds.Value) do
                    if isSelected then
                        local args = {
                            seedName -- Your exact format
                        }
                        pcall(function()
                            game:GetService("ReplicatedStorage")
                                :WaitForChild("GameEvents")
                                :WaitForChild("BuySeedStock")
                                :FireServer(unpack(args))
                        end)
                    end
                end
                task.wait(0.7)
            end
        end)
    end
end)

-- Save / Load system
SaveManager:SetLibrary(Fluent)
InterfaceManager:SetLibrary(Fluent)

SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({})
InterfaceManager:SetFolder("FluentSeedBuyer")
SaveManager:SetFolder("FluentSeedBuyer/Configs")

InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Fluent:Notify({
    Title = "âœ… Loaded!",
    Content = "Seed auto buyer ready.",
    Duration = 6
})

SaveManager:LoadAutoloadConfig()
