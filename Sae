local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "üåæ Auto Shop",
    SubTitle = "by Zoro",
    TabWidth = 160,
    Size = UDim2.fromOffset(560, 420),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Shop = Window:AddTab({ Title = "Shop", Icon = "shopping-cart" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

local Options = Fluent.Options

-- üå± Seeds
local seedList = {
    "Carrot", "Strawberry", "Blueberry", "Tomato", "Cauliflower",
    "Avocado", "Banana", "Green Apple", "Bell Pepper", "Kiwi",
    "Prickly Pear", "Loquat", "Feijoa", "Sugar Apple", "Pineapple"
}

-- üõ†Ô∏è Tools
local toolList = {
    "Harvest Tool", "Watering Can", "Trowel", "Recall Wrench",
    "Basic Sprinkler", "Advanced Sprinkler", "Godly Sprinkler", "Master Sprinkler",
    "Cleaning Spray", "Favorite Tool", "Friendship Pot", "Tanning Mirror"
}

-- Dropdowns
local SelectedSeeds = Tabs.Shop:AddDropdown("SelectedSeeds", {
    Title = "üå± Select Seeds to Auto Buy",
    Multi = true,
    Values = seedList,
    Default = {}
})

local SelectedTools = Tabs.Shop:AddDropdown("SelectedTools", {
    Title = "üõ†Ô∏è Select Tools to Auto Buy",
    Multi = true,
    Values = toolList,
    Default = {}
})

-- Toggles
local AutoBuySeeds = Tabs.Shop:AddToggle("AutoBuySeeds", {
    Title = "üåæ Auto Buy Seeds",
    Default = false
})

local AutoBuyTools = Tabs.Shop:AddToggle("AutoBuyTools", {
    Title = "üîß Auto Buy Tools",
    Default = false
})

-- üåæ Seeds loop
AutoBuySeeds:OnChanged(function(state)
    if state then
        task.spawn(function()
            while AutoBuySeeds.Value do
                for seedName, isSelected in pairs(SelectedSeeds.Value) do
                    if isSelected then
                        local args = { seedName }
                        pcall(function()
                            game:GetService("ReplicatedStorage")
                                :WaitForChild("GameEvents")
                                :WaitForChild("BuySeedStock")
                                :FireServer(unpack(args))
                        end)
                    end
                end
                task.wait(0.7)
            end
        end)
    end
end)

-- üõ†Ô∏è Tools loop
AutoBuyTools:OnChanged(function(state)
    if state then
        task.spawn(function()
            while AutoBuyTools.Value do
                for toolName, isSelected in pairs(SelectedTools.Value) do
                    if isSelected then
                        local args = { toolName }
                        pcall(function()
                            game:GetService("ReplicatedStorage")
                                :WaitForChild("GameEvents")
                                :WaitForChild("BuyGearStock")
                                :FireServer(unpack(args))
                        end)
                    end
                end
                task.wait(0.7)
            end
        end)
    end
end)

-- Save System
SaveManager:SetLibrary(Fluent)
InterfaceManager:SetLibrary(Fluent)

SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({})
InterfaceManager:SetFolder("FluentSeedBuyer")
SaveManager:SetFolder("FluentSeedBuyer/Configs")

InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Fluent:Notify({
    Title = "‚úÖ Loaded!",
    Content = "Auto Buyer Ready (Seeds + Tools)",
    Duration = 6
})

SaveManager:LoadAutoloadConfig()
